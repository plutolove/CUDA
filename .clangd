# Apply this config conditionally to all C files
If:
  PathMatch: .*\.(c|h)$
CompileFlags:
  Compiler: /usr/bin/gcc-13

---

# Apply this config conditionally to all C++ files
If:
  PathMatch: .*\.(c|h)pp
CompileFlags:
  Compiler: /usr/bin/g++-13

---

# Apply this config conditionally to all CUDA files
If:
  PathMatch: .*\.cuh?
CompileFlags:
  Compiler: /usr/local/cuda-13.0/bin/nvcc

---

# Tweak the clangd parse settings for all files
CompileFlags:
  Add:
    # report all errors
    - "-std=c++17"
    - "-ferror-limit=0"
    - "--cuda-path=/usr/local/cuda-13.0"
    - "-L/usr/local/cuda-13.0/lib64"
    - "-I/usr/local/cuda-13.0/include"
    - "-I/usr/local/cuda-13.0/include/cccl"
  Remove:
    # strip CUDA fatbin args
    - "-Xfatbin*"
    # strip CUDA arch flags
    - "-gencode*"
    - "--generate-code*"
    # strip CUDA flags unknown to clang
    - "-ccbin*"
    - "--compiler-options*"
    - "--expt-extended-lambda"
    - "--expt-relaxed-constexpr"
    - "-forward-unknown-to-host-compiler"
    - "-Werror=cross-execution-space-call"
    - "-compress-all"
    - "-Xcudafe"
    - "--diag_suppress=*"
    - "-Xcompiler=*"
    - "-rdc=*"
    - "-arch=*"
    - "--options-file"
    - "-forward-unknown-to-host-compiler"
Hover:
  ShowAKA: No
InlayHints:
  Enabled: No
Diagnostics:
  Suppress:
    - "variadic_device_fn"
    - "attributes_not_allowed"
